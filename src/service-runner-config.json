{
  "$schema": "./lib/service-runner-schema.json",
  "services": [
    {
      "name": "multi-geth",
      "rpcPort": "${DYNAMIC_TCP_PORT_1}",
      "version": "1.9.2",
      "summary": "An Ethereum Classic and Ethereum client",
      "environments": [{
          "name": "mainnet",
          "summary": "Ethereum Classic Mainnet",
          "args": {
            "start": [
              "--classic",
              "--datadir",
              "${SERVICE_DIR}/multi-geth/1.9.2/classic",
              "--ipcpath",
              "${SERVICE_DIR}/multi-geth/1.9.2/classic/geth.ipc",
              "--port",
              "${DYNAMIC_TCP_PORT_2}",
              "--rpc",
              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpccorsdomain", 
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
           "interval": 20000, 
           "retries": 5,
           "port": "${DYNAMIC_TCP_PORT_1}",
           "protocol": "tcp"
           }
        },
        {
          "name": "kotti",
          "summary": "Ethereum Classic POA Testnet",
          "args": {
            "start": [
              "--kotti",
              "--datadir",
              "${SERVICE_DIR}/multi-geth/1.9.2/kotti",
              "--ipcpath",
              "${SERVICE_DIR}/multi-geth/1.9.2/kotti/geth.ipc",
              "--port",
              "${DYNAMIC_TCP_PORT_2}",
              "--rpc",
              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpcaddr",
              "localhost",
              "--rpccorsdomain",
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
           "interval": 20000, 
           "retries": 5,
           "port": "${DYNAMIC_TCP_PORT_1}",
           "protocol": "tcp"
           }
        },
        {
          "name": "dev",
          "summary": "Local Development Environment",
          "args": {
            "start": [
              "--dev",
              "--datadir",
              "${SERVICE_DIR}/multi-geth/1.9.2/dev",
              "--ipcpath",
              "${SERVICE_DIR}/multi-geth/1.9.2/dev/geth.ipc",
              "--port",
              "${DYNAMIC_TCP_PORT_2}",
              "--rpc",
              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpccorsdomain", 
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
           "interval": 20000, 
           "retries": 5,
           "port": "${DYNAMIC_TCP_PORT_1}",
           "protocol": "tcp"
           }
        },
        {
          "name": "ethereum",
          "summary": "Ethereum Mainnet",
          "args": {
            "start": [
              "--datadir",
              "${SERVICE_DIR}/multi-geth/1.9.2/ethereum",
              "--ethereum",
              "${SERVICE_DIR}/multi-geth/1.9.2/ethereum/geth.ipc",
              "--port",
              "${DYNAMIC_TCP_PORT_2}",
              "--rpc",
              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpccorsdomain",
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
           "interval": 20000, 
           "retries": 5,
           "port": "${DYNAMIC_TCP_PORT_1}",
           "protocol": "tcp"
           }
        },
        {
          "name": "goerli",
          "summary": "Ethereum POA Testnet",
          "args": {
            "start": [
              "--goerli",
              "--datadir",
              "${SERVICE_DIR}/multi-geth/1.9.2/goerli",
              "--ipcpath",
              "${SERVICE_DIR}/multi-geth/1.9.2/goerli/geth.ipc",
              "--port",
              "${DYNAMIC_TCP_PORT_2}",
              "--rpc",
              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpccorsdomain",
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
           "interval": 20000, 
           "retries": 5,
           "port": "${DYNAMIC_TCP_PORT_1}",
           "protocol": "tcp"
           }
        },
        {
          "name": "rinkeby",
          "summary": "Ethereum POA Testnet",
          "args": {
            "start": [
              "--rinkeby",
              "--datadir",
              "${SERVICE_DIR}/multi-geth/1.9.2/rinkeby",
              "--ipcpath",
              "${SERVICE_DIR}/multi-geth/1.9.2/rinkeby/geth.ipc",
              "--port",
              "${DYNAMIC_TCP_PORT_2}",
              "--rpc",
              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpccorsdomain",
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
           "interval": 20000, 
           "retries": 5,
           "port": "${DYNAMIC_TCP_PORT_1}",
           "protocol": "tcp"
           }
        }
      ],
      "os": {
        "osx": {
          "commands": {
            "setup": [
              {
                "cmd": "chmod",
                "args": [
                  "+x",
                  "${SERVICE_DIR}/geth"
                ]
              }
            ],
            "start": "${SERVICE_DIR}/geth",
            "stop": "",
            "teardown": ""
          },
          "assets": [
            "https://github.com/multi-geth/multi-geth/releases/download/v1.9.2/multi-geth-osx.zip"
          ]
        },
        "linux": {
          "commands": {
            "setup": [
              {
                "cmd": "chmod",
                "args": [
                  "+x",
                  "${SERVICE_DIR}/geth"
                ]
              }
            ],
            "start": "${SERVICE_DIR}/geth",
            "stop": "",
            "teardown": ""
          },
          "assets": [
            "https://github.com/multi-geth/multi-geth/releases/download/v1.9.2/multi-geth-linux.zip"
          ]
        },
        "windows": {
          "commands": {
            "setup": [],
            "start": "${SERVICE_DIR}/geth.exe",
            "stop": "",
            "teardown": ""
          },
          "assets": [
            "https://github.com/multi-geth/multi-geth/releases/download/v1.9.2/multi-geth-win64.zip"
          ]
        }
      }
    }
  ]
}
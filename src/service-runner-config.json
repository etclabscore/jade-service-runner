      "os": {
        "osx": {
          "commands": {
            "setup": [
              {
                "cmd": "chmod",
                "args": [
                  "u+x",
                  "${SERVICE_DIR}/geth"
                ]
              }
            ],
            "start": "${SERVICE_DIR}/geth",
            "stop": "",
            "teardown": ""
          },
          "assets": [
            "https://github.com/etclabscore/core-geth/releases/download/v1.11.15/core-geth-osx-v1.11.15.zip"
          ]
        },
        "linux": {
          "commands": {
            "setup": [
              {
                "cmd": "chmod",

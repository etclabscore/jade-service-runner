              "--rpcport",
              "${DYNAMIC_TCP_PORT_1}",
              "--rpccorsdomain",
              "*"
            ],
            "stop": [],
            "teardown": []
          },
          "health": {
            "interval": 20000,
            "retries": 5,
            "port": "${DYNAMIC_TCP_PORT_1}",
            "protocol": "tcp"
